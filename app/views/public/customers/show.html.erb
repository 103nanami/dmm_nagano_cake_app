<div class="container">
  <div class="row">
    <h5 style="background-color:#f0f0f0; width:180px; padding:0px 40px; margin:30px 0 30px 0">マイページ</h5>
  </div>

  <div class="row">
    <div class="col-lg-8", style="display:flex; margin:20px 0 10px 0;">
      <h5 style="font-weight:bold;">登録情報</h5>
      <%= link_to "編集する",customers_edit_path, class:"btn btn-success", style:"margin:0 20px 0 auto; width:120px;" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
    <%= form_with model:@customer,url:customers_my_page_path,  local:true do |f| %>
      <table class="table table-bordered">
        <tr><td style="width:200px;">氏名</td><td style="width:300px;"><%= @customer.last_name %> <%= @customer.first_name %></td></tr>
        <tr><td>カナ</td><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td></tr>
        <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>
        <tr><td>住所</td><td><%= @customer.adress %></td></tr>
        <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>
        <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>
      </table>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 mx-auto;">
      <div class="button1", style="display:flex; margin:20px 0 10px 0; width:200px;"><h5 style="font-weight:bold; padding-top:5px;">配送先</h5><%= link_to "一覧を見る",adresses_path, class:"btn btn-primary", style:"margin-left:30px;" %></div>
      <div class="button2", style="display:flex; margin:20px 0 10px 0; width:200px;"><h5 style="font-weight:bold; padding-top:5px;">注文履歴</h5><%= link_to "一覧を見る",orders_path, class:"btn btn-primary", style:"margin-left:10px;"  %></div>
    </div>
  </div>

</div>