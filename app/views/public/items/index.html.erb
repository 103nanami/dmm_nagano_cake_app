<div class="container">

  <div class="row">
    <div class="col-lg-12 mx-auto;", style="margin:50px 0 20px 0;">
      <div class="title", style="display:flex;">
        <h2 style="color:black;">商品一覧</h2>
        <p style="padding:5px 0 0 10px; font-size:20px;">(全<%= @item.count %>件)</p>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="col-lg-12 mx-auto">

      <div class="item_box">
        <% @items.each do |item| %>
          <div class="each-items">
            <div class="item_image">
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image, style:"width:250px; height:auto;" %>
              <% end %>
            </div>
            <div class="item_name", style="margin-bottom:50px;">
              <p><%=item.name %></p>
              <p>￥<%= item.price %></p>
            </div>
          </div>
        <% end %>
      </div>

      <%= paginate @items %>

    </div>
</div>


<style>
  .item_box{
    display:flex;
    justify-content:space-between;
    flex-wrap: wrap;
  }

  .each_items{
    margin:0 10px 0 10px;
    width:25%;
  }

</style>
