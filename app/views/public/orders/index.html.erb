<div class="container">
  <div class="row">
    <h5 style="background-color:#f0f0f0; width:200px; padding:0px 40px; margin:30px 0 30px 0">注文履歴一覧</h5>
  </div>

  <div class="row">
    <div class="col-md-10 me-auto", style="float:left; clear:both;">
      <table class="table table-bordered">
        <thead style="background-color:#f0f0f0;">
          <tr>
            <th scope="col">注文日</th>
            <th scope="col">配送先</th>
            <th scope="col">注文商品</th>
            <th scope="col">支払金額</th>
            <th scope="col">注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td style="width:400px;"><%= order.delivery_adress_number %></br>
            <%= order.delivery_adress %></br>
            <%= order.delivery_name %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
            </td>
            <td><%= order.totalprise %></td>
            <td style="width:120px;"><%= link_to "表示する", order_path(order),class:"btn btn-primary" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>