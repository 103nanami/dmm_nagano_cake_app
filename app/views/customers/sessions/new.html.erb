<div class="container">
  <div class="row">
    <h5 style="background-color:#f0f0f0; width:200px; padding:0px 40px; margin:30px 0 30px 0">ログイン</h5>
  </div>

  <p class="alert"><%= alert %></p>
  <style>
    .alert{
      color:red;
    }
  </style>

  <div class="row">
    <div class="col-lg-8">
      <h6 style="background-color:#f0f0f0; width:280px; padding:0px 20px; margin:30px 0 30px 0">会員の方はこちらからログイン</h6>

      <%= form_with model: @customer, url: customer_session_path( @customer), local: true do |f| %>
        <table style="margin:0 auto;">
          <tr>
            <th><label>メールアドレス</label></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width:300px;" %></td>
          </tr>

          <tr>
            <th><label>パスワード</label></th>
            <td><%= f.password_field :password, autocomplete: "current-password", style:"width:300px;" %></td>
          </tr>
        </table>

        <div class="row" style="margin:30px 0 20px 0;">
          <%= f.submit "ログイン",class:"btn btn-primary", style:"margin:0 auto; width:150px" %>
        </div>
      <% end %>
    </div>
  </dov>

  </div>

  <div class="row">
    <div class="col-lg-12">
      <h6 style="background-color:#f0f0f0; width:280px; padding:0px 20px; margin:30px 0 30px 0">会員登録がお済みでない方</h6>
      <p style="padding-left:100px;"><%=link_to "こちら",new_customer_registration_path %>から新規登録を行ってください。</p>
    </div>
  </div>

</div>

<style>

  th{
    text-align: left;
    font-weight: normal;
    width:200px;
    padding:10px;
  }
</style>

