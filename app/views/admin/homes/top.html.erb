<div class="container">
  <div class="row">
    <h5 style="background-color:#f0f0f0; width:200px; padding:0px 40px; margin:30px 0 30px 0">注文履歴一覧</h5>
  </div>

  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
    　<table class="table">
      	<thead style="background-color:#f0f0f0;">
        	<tr>
        　　　<th scope="col">購入日時</th>
        　　　<th scope="col">購入者</th>
        　　　<th scope="col">注文個数</th>
      　     <th scope="col">注文ステータス</th>
        　</tr>
      	</thead>
  	    <tbody>
	　   <% @orders.each do |order| %>
　　　      <tr>
　　　        <td style="width:250px;">
　　　          <%= link_to admin_order_path(order.id) do %>
　　　          <%=order.created_at.strftime('%Y/%m/%d') %>
　　　          <% end %>
　　　          </td>
　　　        <td style="width:250px;"><%=order.customer.last_name %><%=order.customer.first_name %></td>
　　　        <td style="width:100px;">
　　　          <% @total = 0 %>
　　　          <% order.order_details.each do |order_detail| %>
　　　            <% @total += order_detail.amount %>
　　　          <% end %>
　　　          <%= @total %>
　　　        </td>
　　　        <td>入金待ち</td>
　　　      </tr>
　　　   <% end %>
  	   </tbody>
　　  </table>

      <%= paginate @orders %>
    </div>
  </div>
</div>
