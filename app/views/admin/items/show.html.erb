<div class="container">
  <div class="row">
    <h5 style="background-color:#f0f0f0; width:180px; padding:0px 40px; margin:30px 0 30px 0">商品詳細</h5>
  </div>

  <div class="row">
    <div classs="col-lg-3">
      <%= attachment_image_tag @item, :image, :width => "300px", :hight => "auto" %>
    </div>

    <div class="col-lg-8 col-lg-offset-1",style="display:block;">

      <table>
        <tr>
          <td>商品名</td><td><%=@item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td><td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td><td><%= @genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</br>(税抜価格)</td><td><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</td>
        </tr>
      </table>
      <%=link_to "編集する",edit_admin_item_path(@item), class:"btn btn-success" %>
    </div>
  </div>

</div>
