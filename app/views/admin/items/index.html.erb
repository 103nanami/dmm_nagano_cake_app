<div class="container">
  <div class="row">
    <h5 style="background-color:#f0f0f0; width:180px; padding:0px 40px; margin:30px 0 30px 0">商品一覧</h5>
    <div class="circle"><%= link_to "+", new_admin_item_path, class:"plus" %></div>
    <style>
      .circle {
        border-radius: 50%;
        background-color:#f7b8b2;
        width: 50px;
        height: 50px;
        font-size:40px;
        text-align: center;
        line-height:46px;
        margin:20px 0 0 auto;
      }

      .plus:hover{
        text-decoration: none;
      }

      .plus{
        color:white;
      }
    </style>
  </div>

  <div class="row">
    <div class="col-lg-12 mx-auto">
    　<table class="table">
      	<thead style="background-color:#f0f0f0;">
        	<tr>
        　　　<th scope="col">商品ID</th>
        　　　<th scope="col">商品名</th>
        　　　<th scope="col">税抜価格</th>
        　　　<th scope="col">ジャンル</th>
      　     <th scope="col">ステータス</th>
        　</tr>
      	</thead>
  	    <tbody>
	　   <% @items.each do |item| %>
       	　<tr>
          　<td><%=item.id %></td>
            <td>
              <%= link_to admin_item_path(item),class:"item_id" do %>
          　    <%=item.name %>
          　   <% end %>
          　 </td>
          　<td><%=item.price %>円</td>
          　<td><%=item.genre.name %></td>
    	      <td>販売中</td>
       　　　 </tr>
       　<% end %>
  	    </tbody>
　　　</table>

      <%= paginate @items %>
    </div>
  </div>
</div>

<style>
  .item_id:hover{
    text-decoration: none;
    color: black;
  }
</style>