<header>
  <div class="logo-nav">
    <div class="logo">
      <%= link_to root_path, class:"link_to" do %>
      <h1>NAGANO CAKE</h1>
      <% end %>
      <style>
        .link_to:hover{
          text-decoration: none;
        }
      </style>
    </div>

    <div class="nav-right">
      <div class="nav-list">
          <%= link_to "商品一覧", admin_items_path, class:"btn btn-light" %>
          <%= link_to "会員一覧", admin_customers_path, class:"btn btn-light" %>
          <%= link_to "注文履歴一覧", admin_path, class:"btn btn-light" %>
          <%= link_to "ジャンル一覧", admin_genres_path, class:"btn btn-light" %>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-light" %>
      </div>

      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</header>

<style>
header{
  width:100%;
  background-color:#f7b8b2;
}

.logo-nav{
  display:flex;
}

.nav-right{
  margin:0 0 0 auto;
}

.nav-list{
  margin:20px;
}

h1{
  margin:50px 50px 30px 20px;
  color:white;

}

.d-flex{
  width:300px;
  float: right;
  margin:0 20px 10px 0;
}


</style>
